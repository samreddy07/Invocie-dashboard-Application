<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Summer_Internship_Backend</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>CorsFilter</filter-name>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
    <init-param>
      <param-name>cors.allowed.origins</param-name>
      <param-value>http://localhost:3000</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CorsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>FetchFilm</servlet-name>
    <servlet-class>com.higradius.FetchFilm</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>FetchFilm</servlet-name>
    <url-pattern>/fetch</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>DeleteInvoice</servlet-name>
    <servlet-class>com.higradius.DeleteInvoice</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteInvoice</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateInvoice</servlet-name>
    <servlet-class>com.higradius.UpdateInvoice</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateInvoice</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>AddInvoice</servlet-name>
    <servlet-class>com.higradius.AddInvoice</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddInvoice</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SearchInvoice</servlet-name>
    <servlet-class>com.higradius.SearchInvoice</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchInvoice</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  
</web-app>